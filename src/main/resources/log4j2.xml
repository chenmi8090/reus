<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">
    <Properties>
        <Property name="LOG_HOME">logs</Property>
    </Properties>
    <!--先定义所有的appender -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %t [%c:%L]-%m%n" />
        </Console>
        <RollingFile name="service_appender" fileName="${LOG_HOME}/reus.log"
            immediateFlush="false" append="true"
            filePattern="${LOG_HOME}/$${date:yyyy-MM}/reus-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %t [%c:%L]-%m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy
                    size="512MB" />
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/reus-*.log.gz" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <AsyncRoot level="info" includeLocation="true"
            additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="service_appender" />
        </AsyncRoot>
    </Loggers>
</Configuration>
